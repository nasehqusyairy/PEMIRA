@using Microsoft.AspNetCore.Http.Extensions
@model TagsViewModel
@{
    ViewBag.PageTitle = "Penanda";
    string currentUrl = Context.Request.GetDisplayUrl();
    var startNumber = (Model.CurrentPage - 1) * Model.LimitEntry + 1;
}
@* alert success *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <a asp-action="Create" class="btn btn-primary mb-3"><i class="bi bi-plus"></i> Penanda Baru</a>
                <form>
                    @(ViewHelper.GenerateSearchAndLimitForm(Model.LimitEntry, Model.Search ?? ""))
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>
                                        <a href="@(UrlHelper.SetOrderBy(currentUrl,"Name"))" class="text-dark">
                                            Nama
                                        </a>
                                    </th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tag in Model.Tags)
                                {
                                    <tr>
                                        <td>@(startNumber++)</td>
                                        <td>
                                            @(tag.Name)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-warning rounded">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-danger rounded"
                                               onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                                @if (Model.Tags.Count == 0)
                                {
                                    @(ViewHelper.GenerateNoDataRow(3))
                                }
                            </tbody>
                        </table>
                    </div>
                    @(ViewHelper.GeneratePagination(currentUrl, Model.CurrentPage, Model.PageCount))
                </form>
            </div>
        </div>
    </div>
</div>
