@model CandidateViewModel
@{
  ViewBag.PageTitle = "Kandidat Baru";
}
<div class="card">
  <div class="card-body">
    <form asp-action="Create" method="post">
      @Html.AntiForgeryToken()
      <div class="mb-3">
        <label class="form-label" asp-for="UserId">ID Pengguna</label>
        <input type="text" class="form-control" asp-for="UserId">
        <small class="text-danger form-text"><span asp-validation-for="UserId"></span></small>
      </div>
      <div class="mb-3">
        <label class="form-label" asp-for="ElectionId">ID Pemilihan</label>
        <input type="text" class="form-control" asp-for="ElectionId">
        <small class="text-danger form-text"><span asp-validation-for="ElectionId"></span></small>
      </div>
      <button class="btn btn-primary" type="submit">Simpan</button>
      <a asp-action="Index" class="btn btn-secondary">Kembali</a>
    </form>
  </div>
</div>