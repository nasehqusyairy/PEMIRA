@model User
@{
    ViewBag.PageTitle = "Beranda";
}

@* jumbotron *@
<div class="card rounded-3 mb-3">
    <div class="card-body p-5">
        <h1 class="display-4">Selamat Datang, @Model.Name!</h1>
        <p class="lead">
            Silakan memulai voting dengan pergi ke halaman voting melalui menu di sisi kiri atau klik tombol di bawah
            ini.
        </p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Vote")" role="button">Mulai Voting</a>
    </div>
</div>
